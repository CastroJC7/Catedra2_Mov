<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5DDF0"
    tools:context=".MainActivity">

    <!-- Imagen centrada con margen desde la parte superior -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/user_9187466" />

    <!-- Campo de correo centrado debajo de la imagen -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp" />

    <!-- Campo de contraseña centrado debajo del campo de correo -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@id/etEmail"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp" />

    <!-- Contenedor para los botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassword"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <!-- Botón de iniciar sesión -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Iniciar sesión"
            android:background="@drawable/rounded_button"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Botón de registro -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Registrarse"
            android:background="@drawable/rounded_button"
            android:textColor="#FFFFFF" />

        <!-- Botón de Google Sign In -->
        <Button
            android:id="@+id/btnGoogleSignIn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Iniciar sesión con Google"
            android:background="@drawable/rounded_button"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</RelativeLayout>
